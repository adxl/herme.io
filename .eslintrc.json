{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "babel-eslint",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            0,
            "always"
        ],
        "import/no-named-as-default": [
            0,
            "always"
        ],
        "import/no-named-as-default-member": [
            0,
            "always"
        ],
        "react/state-in-constructor": [
            0,
            "always"
        ],
        "jsx-a11y/label-has-associated-control": [
            0,
            {
                "labelComponents": [],
                "labelAttributes": [],
                "controlComponents": [],
                "assert": "both",
                "depth": 25
            }
        ],
        "react/jsx-fragments": [
            0
        ]
    }
}